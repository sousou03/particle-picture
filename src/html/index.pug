-
  var metaTitle = 'particle picture';
  var metaKeywords = 'WebGL, three.js';
  var metaDescription = 'drawing a picture with particles and move it.';
  var metaPath = '/';
  var metaOgpImg = 'share.jpg';

doctype html
html(lang="ja")
  head
    include ./modules/_head.pug
  body
    .p-contents-summary
      h1.p-contents-summary__head
        |#{metaTitle}
      p.p-contents-summary__text
        |#{metaDescription}
      p.p-contents-summary__link-source
        a(href="https://github.com/ykob/"+repositoryName)
          |view source.
    .p-preloader
      .p-preloader__wrap
        .p-preloader__icon
        .p-preloader__label
          |Loading
    canvas(id="canvas-webgl", class="p-canvas-webgl")
    script(src="./js/vendor.js")
    script(src="./js/main.js")
